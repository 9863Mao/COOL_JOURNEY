
<div class="container">
  <div class="row">
    <div class="col">
      <h2>新規登録画面</h2>

        <%= form_with model:@user, url: user_registration_path do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          
          <div class="field">
            <%= f.label :名前 %>
            <%= f.text_field :first_name %> <%= f.text_field :last_name %>
          </div>
          
          <div class="field">
            <%= f.label :メールアドレス %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          
          <div class="field">
          <%= f.label :電話番号 %>
          <%= f.text_field :telephone_number %>
          </div>
          
          <div class="field">
            <%= f.label :ユーザーネーム（プロフィールに表示されます） %>
            <%= f.text_field :user_nickname %>
          </div>
        
          <div class="field">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        
          <div class="field">
            <%= f.label :パスワード（確認用） %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        
          <div class="actions">
            <%= f.submit "新規登録" %>
          </div>
        <% end %>
        
        <%= render "public/shared/links" %>
    </div>
  </div>
</div>