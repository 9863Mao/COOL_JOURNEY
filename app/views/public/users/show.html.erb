<div class="container">
  <div class="row">
    <div class="col col-3">
      <% if @user.is_active == false %>
      <%= image_tag @user.get_profile_image(100,100), class: "rounded-circle" %>
    </div>
    <div class="col col-5">
      <table>
        <tr>
          <th><label><%= @user.user_nickname %></label></th>
          <td>さん</td>
        </tr>
        <tr>
          <td><%= link_to public_user_followings_path(@user.id) do %>フォロー<%= @user.followings.count %><% end %></td>
          <td><%= link_to public_user_followers_path(@user.id) do %>フォロワー<%= @user.followers.count %><% end %></td>
        </tr>
      </table>
      <% if user_signed_in? %>
        <% if @user.id == current_user.id %>
          <%= link_to"編集する", edit_public_user_path %>
        <% else %>
          <% if current_user.following?(@user) %>
            <%= link_to "フォローを解除", public_user_follows_path(@user.id), method: :delete %>
          <% else %>
            <%= link_to "フォローする", public_user_follows_path(@user.id), method: :post %>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="col col-4">
      <%= @user.self_introduction %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class='table table-hover table-inverse'>
        <h5><strong>投稿した思い出</strong></h5>
        <thead>
          <tr>
            <th>ユーザー</th>
            <th>投稿タイトル</th>
            <th>写真</th>
            <th>いいね数</th>
            <th>投稿日時</th>
          </tr>
        </thead>
        <% @posts.each do |post| %>
          <% if post.is_active == true %>
          <tbody>
            <tr>
              <td><%= post.user.user_nickname %></td>
              <td><%= link_to public_post_path(post.id) do %> <%= post.title %><% end %></td>
              <td><% if post.image.attached? %><%= image_tag post.image, size: "50x50" %><% else %><%= image_tag 'no_image', size: "50x50" %><% end %></td>
              <td><%= post.favorites.count %>♥</td>
              <td><%= post.created_at.to_s(:datetime_jp) %></td>
            </tr>
          </tbody>
          <% else %>
          <% end %>
        <% end %>
      <% else %>
      <p><b>退会したユーザーです。</b></p>
      <% end %>
        
      </table>
    </div>
  </div>
</div>