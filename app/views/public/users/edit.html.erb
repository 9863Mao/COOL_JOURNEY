<div class="container">
  <div class="row">
    <div class="col">
      <h3>プロフィール編集ページ</h3>
      <%= form_with model: @user, url: public_user_path, method: :patch do |f| %>
        <table>
          <thead>
          <tr>
            <th>プロフィール画像</th>
            <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
          </tr>
          <tr>
            <th>ニックネーム</th>
            <td><%= f.text_field :user_nickname, autofocus: true, placeholder:"ニックネーム" %></td>
          </tr>
          <tr>
            <th>紹介文</th>
            <td><%= f.text_area :self_introduction, autofocus: true, placeholder:"自己紹介" %></td>
          </tr>
          </thead>
        </table>
        <%= f.submit "変更を保存" %>
        <%= link_to "退会する", public_users_confirm_path %>
      <% end %>
      </div>
    </div>
  </div>